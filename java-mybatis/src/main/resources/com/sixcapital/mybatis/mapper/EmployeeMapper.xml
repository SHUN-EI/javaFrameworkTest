<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="com.sixcapital.mybatis.mapper.EmployeeMapper">

    <!--select查询语句-->
    <select id="getEmployeelist" resultType="com.sixcapital.mybatis.entity.Employee">
       select * from mybatis_test.employee;
   </select>

    <select id="getEmployeeByEmpno" parameterType="int" resultType="com.sixcapital.mybatis.entity.Employee">
        select *  from mybatis_test.employee where empno =#{empno};
    </select>

    <insert id="addEmployee" parameterType="com.sixcapital.mybatis.entity.Employee">
        insert  into mybatis_test.employee values (#{empno},#{ename},#{job},#{mgr},#{hiredate},#{sal},#{deptnu});
    </insert>

    <update id="updateEmployee" parameterType="com.sixcapital.mybatis.entity.Employee">
        update mybatis_test.employee set ename =#{ename}, job=#{job}  where empno=#{empno};
    </update>

    <delete id="deleteEmployee" parameterType="int">
        delete from mybatis_test.employee where empno=#{empno};
    </delete>

</mapper>